@using Kendo.Mvc.UI
@using ICC.Mincloud.Web.Util
@model ICC.Mincloud.Modelo.Entities.LideresMinisterios
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.TempId)

<div class="form-horizontal">
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.MinisterioId, "MinisterioId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @(Html.Kendo().DropDownList()
                      .Name("MinisterioId")
                      .HtmlAttributes(new { @style = "width:100%;" })
                      .OptionLabel("Seleccione un ministerio...")
                      .DataTextField("Nombre")
                      .DataValueField("MinisterioId")
                      .DataSource(source =>
                      {
                          source.Read(read =>
                          {
                              read.Action("GetMinisterios", "Ministerios");
                          });
                      })
            )
            @Html.ValidationMessageFor(model => model.MinisterioId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LiderGeneral, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            
                @Html.EditorFor(model => model.LiderGeneral)
                @*@Html.CheckBoxSwitch("LiderGeneral")
                @Html.EditorFor(model => model.LiderGeneral, new { htmlAttributes = new { @hidden = "hidden" } })*@
                @Html.ValidationMessageFor(model => model.LiderGeneral, "", new { @class = "text-danger" })
            
        </div>
    </div>

</div>