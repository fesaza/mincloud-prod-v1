			<a href="@Url.Action("Details", "Municipios", new { MunicipioId = Model.MunicipioId })"><small>View</small></a>
		</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(x => x.Persona_PersonaInvitaId)</td>
@if (Model.PersonaInvitaId != null) {
		<td>
			<a href="@Url.Action("Details", "Personas", new { PersonaId = Model.PersonaInvitaId })"><small>View</small></a>
		</td>
