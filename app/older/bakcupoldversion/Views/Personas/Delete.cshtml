		<td></td>
}
			</tr>
			<tr>
				<td>@Html.LabelFor(x => x.TiposReunione)</td>
@if (Model.TipoReunionPrimeraVezId != null) {
		<td>
			<a href="@Url.Action("Details", "TiposReuniones", new { TipoReunionId = Model.TipoReunionPrimeraVezId })"><small>View</small></a>
		</td>
}
else {
		<td></td>
}
