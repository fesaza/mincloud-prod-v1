@model ICC.Mincloud.Modelo.Entities.SeguimientosPersona

@{
    ViewBag.Title = "Eliminar seguimiento";
}

<h4>Esta seguro que desea eliminar este seguimiento?</h4>
<div>
    <h4>Seguimientos Persona</h4>
    <hr/>
    @Html.DisplayFor(model => model.Persona)
    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.EncargadoId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Encargado.Nombre)
        </dd>

        
        <dt>
            @Html.DisplayNameFor(model => model.SeguimientoId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seguimiento.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observaciones)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaSeguimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaSeguimiento)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Cancelar", "Index")
        </div>
    }
</div>
