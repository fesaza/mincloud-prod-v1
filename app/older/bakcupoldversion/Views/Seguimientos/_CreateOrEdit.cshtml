@using Kendo.Mvc.UI
@model ICC.Mincloud.Modelo.Entities.Seguimiento

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })

                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion)
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="EncargadoId" class="control-label">Encargado</label>
                <div class="controls">
                    @(Html.Kendo().DropDownList()
              .Name("EncargadoId")
              .HtmlAttributes(new { @style = "width:280px" })
              .OptionLabel("Seleccione un encargado...")
              .DataTextField("Nombre")
              .DataValueField("PersonaId")
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetLideres", "Personas");
                  });
              })
                    )
                    @Html.ValidationMessageFor(model => model.EncargadoId)

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Dias, new { @class = "control-label" })

                @Html.EditorFor(model => model.Dias, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dias)
            </div>
        </div>
    </div>
</div>
