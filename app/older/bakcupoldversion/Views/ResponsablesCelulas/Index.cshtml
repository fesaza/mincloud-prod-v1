@model ICC.Mincloud.Modelo.Entities.ResponsablesCelula
@{
	ViewBag.Title = "ResponsablesCelulas";
}

<ul class="breadcrumb">
	<li><a href="\">Tables</a> <span class="divider">/</span></li>
	<li class="active">ResponsablesCelulas</li>
</ul>

@{
	Func<string, object> routeValuesSortBy = (sortBy) => new {
		page = ViewBag.Page,
		pageSize = ViewBag.PageSize,
		sortBy = sortBy,
		sortDesc = ViewBag.SortBy != sortBy || ViewBag.SortDesc != null && ViewBag.SortDesc == true ? null : (object)true
		,
		PersonaId = ViewBag.PersonaId
	};

	Func<int, object> routeValuesPage = (page) => new {
		page = page,
		pageSize = ViewBag.PageSize,
		sortBy = ViewBag.SortBy,
		sortDesc = ViewBag.SortDesc
		,
		PersonaId = ViewBag.PersonaId
	};

	Func<object, string> formatValue = (value) => {
		if (value == null)
			return string.Empty;
		string strValue = Convert.ToString(value);
		if (strValue.Length > 20)
			strValue = strValue.Substring(0, 20) + "...";
		return strValue;
	};
}

<script type="text/javascript">
	function submitFilterForm(index, value) {
		var f = document.getElementById('filterform');
		f.elements[index].value = value;
		f.submit();
	}
</script>

<div class="row">
	<div class="span8">
		<form id="filterform" method="GET">
			<input type="hidden" name="PersonaId" value="@ViewBag.PersonaId">
			<div class="btn-group">
@if (ViewBag.SelectedPersona == null) {
				<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><small>Persona</small> <span class="caret"></span></a>
}
else {
				<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><small>Persona: <strong>@formatValue(ViewBag.SelectedPersona)</strong></small> <span class="caret"></span></a>
}
				<ul class="dropdown-menu">
@foreach (SelectListItem item in ViewBag.Personas) {
					<li><a href="javascript:{}" onclick="submitFilterForm(0, '@item.Value');">@(item.Text ?? "[All]")</a></li>
}
				</ul>
			</div>
		</form>
	</div>
	<div class="span4">
		@Html.ActionLink("Crear nuevo", "Create", null, new { @class = "btn btn-primary pull-right" })
	</div>
</div>

<table class="table table-bordered table-striped table-condensed table-hover">
	<thead>
		<tr>
			<th></th>
			<th>
				<a href="@Url.Action("Index", routeValuesSortBy("ResponsablesCelulaId"))"><small>@Html.DisplayNameFor(model => model.ResponsablesCelulaId)</small></a>
			</th>
			<th>
				<a href="@Url.Action("Index", routeValuesSortBy("PersonaId"))"><small>@Html.DisplayNameFor(model => model.PersonaId)</small></a>
			</th>
			<th>
				<a href="@Url.Action("Index", routeValuesSortBy("Encargado"))"><small>@Html.DisplayNameFor(model => model.Encargado)</small></a>
			</th>
			<th>
				<small>Persona</small>
			</th>
		</tr>
	</thead>
@foreach (var item in ViewBag.Entities) {
	<tr>

		<td>
			<div class="btn-group">
				<a href="@Url.Action("Edit", new { ResponsablesCelulaId = item.ResponsablesCelulaId })" class="btn btn-mini"><i class="icon-pencil"></i></a>
				<a href="@Url.Action("Details", new { ResponsablesCelulaId = item.ResponsablesCelulaId })" class="btn btn-mini"><i class="icon-info-sign"></i></a>
				<a href="@Url.Action("Delete", new { ResponsablesCelulaId = item.ResponsablesCelulaId })" class="btn btn-mini"><i class="icon-trash"></i></a>
			</div>
		</td>
		<td>
			<small>@formatValue(item.ResponsablesCelulaId)</small>
		</td>
		<td>
			<small>@formatValue(item.PersonaId)</small>
		</td>
		<td>
			<small>@formatValue(item.Encargado)</small>
		</td>
		<td>
			<a href="@Url.Action("Details", "Personas", new { PersonaId = item.PersonaId })"><small>View</small></a>
		</td>
	</tr>
}
</table>

@if (ViewBag.PaginationData != null) {
	int currentPage = ViewData.ContainsKey("Page") ? ViewBag.Page : 1;
<div class="pagination pagination-centered pagination-small">
	<ul>
	@foreach (Tuple<string, bool, int> pageTuple in ViewBag.PaginationData) {
		if (!pageTuple.Item2) {
			<li class="disabled"><span>@pageTuple.Item1</span></li>
		}
		else if (pageTuple.Item3 == currentPage) {
			<li class="active"><span>@pageTuple.Item1</span></li>
		}
		else {
			 <li ><a href="@Url.Action("Index", routeValuesPage(pageTuple.Item3))">@pageTuple.Item1</a></li>
		}
	}
	</ul>
</div>
}
