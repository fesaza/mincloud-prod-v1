@model ICC.Mincloud.Modelo.Entities.Nivel
@{
	ViewBag.Title = "Create";
}

<ul class="breadcrumb">
	<li><a href="\">Tables</a> <span class="divider">/</span></li>
	<li>@Html.ActionLink("Niveles", "Index", "Niveles") <span class="divider">/</span></li>
	<li class="active">Create</li>
</ul>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Niveles", FormMethod.Post, new { @class = "form-horizontal" })) {
	@Html.ValidationSummary(true)
