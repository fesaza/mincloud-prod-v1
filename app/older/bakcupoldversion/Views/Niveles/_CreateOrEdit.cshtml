@using Kendo.Mvc.UI
@model ICC.Mincloud.Modelo.Entities.Nivel

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="form-group">
    @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
    <div class="controls">
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.ProgramaId, new { @class = "control-label" })
    <div class="controls">
        @(Html.Kendo().DropDownList()
                                  .Name("ProgramaId")
                                  .HtmlAttributes(new { @style = "width:280px" })
                                  .OptionLabel("Seleccione un programa...")
                                  .DataTextField("Nombre")
                                  .DataValueField("ProgramaId")
                                  .DataSource(source =>
                                  {
                                      source.Read(read =>
                                      {
                                          read.Action("GetProgramasJson", "Programas");
                                      });
                                  })
        )
        @Html.ValidationMessageFor(model => model.ProgramaId)
    </div>
</div>
