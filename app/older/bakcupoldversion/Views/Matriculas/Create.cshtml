@model ICC.Mincloud.Modelo.Entities.Matricula
@using ICC.Mincloud.Modelo.Util
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "Agregar matricula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProgramaId)
    @Html.HiddenFor(model => model.FechaInicio)

    <div class="form-horizontal">
        <h4>Matricula</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EstudianteId, "Estudiante", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EstudianteId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EstudianteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PeriodoId, "Periodo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PeriodoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PeriodoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(Html.Kendo().DropDownList()
                      .Name("Estado")
                      .HtmlAttributes(new { @style = "width:95%;height:28px" })
                      .BindTo(Enum.GetNames(typeof(EstadosMatricula)).ToList())
                )
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar y continuar" class="btn btn-success" />
                @Html.ActionLink("Finalizar", "Matricular", new { programaId = Model.ProgramaId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
<div>

</div>
