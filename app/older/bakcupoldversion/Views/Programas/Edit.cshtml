@model ICC.Mincloud.Modelo.Entities.Programa
@{
	ViewBag.Title = "Edit";
}

<ul class="breadcrumb">
	<li><a href="\">Tables</a> <span class="divider">/</span></li>
	<li>@Html.ActionLink("Programas", "Index", "Programas") <span class="divider">/</span></li>
	<li class="active">Edit</li>
</ul>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Programas", FormMethod.Post, new { @class = "form-horizontal" })) {
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>Programa</legend>

			@Html.HiddenFor(model => model.ProgramaId)
			@Html.Partial("_CreateOrEdit", Model)

		<div class="control-group">
			<div class="controls">
				<input type="submit" value="Save" class="btn btn-success" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
			</div>
		</div>
	</fieldset>
}
