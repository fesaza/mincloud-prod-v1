@using Kendo.Mvc.UI
@model ICC.Mincloud.Modelo.Entities.Departamento

@* This partial view defines form fields that will appear when creating and editing entities *@


<div class="form-group">
    @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })

    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Nombre)

</div>
<div class="form-group">
    @Html.LabelFor(model => model.PaisId, new { @class = "control-label" })
    @(Html.Kendo().DropDownList()
                                  .Name("PaisId")
                                  .HtmlAttributes(new { @style = "width:280px" })
                                  .OptionLabel("Seleccione un pais...")
                                  .DataTextField("Nombre")
                                  .DataValueField("PaisId")
                                  .DataSource(source =>
                                  {
                                      source.Read(read =>
                                      {
                                          read.Action("GetPaises", "Departamentos");
                                      });
                                  })
    )
    @Html.ValidationMessageFor(model => model.Paise)

</div>
